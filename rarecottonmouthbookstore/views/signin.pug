extends layout 
block content
  .container.logo
    h1.logo Codex
  .container2 
    p.logo Just Books...
  .container.signin
    if error
      h2.error-message= error
    h1.signin Sign In
    img.signin(src='http://www.twyva.org.tw/images/others/IconStory.png')
    form.signin(method="post" action="/signin")
      input.signin(type="text" name="email" placeholder="Email")
      br 
      input.signin(type="password" name="password" placeholder="Password")
      br
      input.button-signin(type="submit" value="Sign In")
  
  include codexinfo
  include footer
