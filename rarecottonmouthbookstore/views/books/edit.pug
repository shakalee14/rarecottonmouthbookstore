extends ../layout 
block content
  .container
    h1.editbook Edit the Book: #{book.title}
    if signedIn
      form.editform(method="post" action=`/books/${book.id}`)
        input.edit-title.edit(type="text" name="title" value=`${book.title}`)
        for author in authors
          input.edit(type="text" name="authors" value=`${author.name}`)
        input.edit(type="text" name="authors" placeholder='Author')
        input.edit(type="text" name="authors" placeholder='Author')
        input.edit(type="text" name="authors" placeholder='Author')
        select.edit-genre(name="genres" multiple)
          for genre in genres
            option.edit-options(value=genre.id)= genre.genre
        input.edit(type="text" name="imgurl" value=`${book.imgurl}`)  
        input.edit-submit(type="submit" value="Update Book")
    else
      h3.book Please Log In or Sign Up to add a book
        br
        br
        a(href="/signin") Sign In
        br
        br
        a(href="/signup") Sign Up
  include ../footer