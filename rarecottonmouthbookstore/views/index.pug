extends layout

block content
  .container
    h1.listing
      if signedIn
        p.username Welcome Back #{user.name}!
      else
        p Welcome to #{title}
    h2.listing { Books Listing }
    if page > 1 
      a.previous-link(href="/?page="+(page -1)) Previous Page
    if books.length >= 10
      a.next-link(href="/?page="+(page +1)) Next Page
    br
    for book in books
      table.listing
        thead.listing
          th 
          th 
        tbody
            tr
              td.listing
                img.list-img(src=(book.imgurl || 'https://d30y9cdsu7xlg0.cloudfront.net/png/5020-200.png'))
              td.listing
                p.info Book Info
                a.listing-link(href="/books/"+book.id)=book.title
                p.info Authors
                for author in book.authors
                  p=author.name
                if book.genres.length > 1 
                  p.info Genres
                  for genre in book.genres
                    p= genre.genre
    if page > 1 
      a.previous-link(href="/?page="+(page -1)) Previous Page
    if books.length >= 10
      a.next-link(href="/?page="+(page +1)) Next Page
  include footer
