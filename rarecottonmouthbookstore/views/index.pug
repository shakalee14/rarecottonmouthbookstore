extends layout

block content
  h1= title
    if signedIn
      p Welcome Back!
    else
      p Welcome to #{title}
    pre= JSON.stringify(session, null, 4)
  h2 Book Listing
  
  table
    thead
      tr image
      tr title
      tr author
      tr genre
    tbody
      for book in books
        tr
          td
            img.list-img(src=book.imgurl)
          td
            a(href="/books/"+book.id)=book.title
          td
            for author in book.authors
              p=author.name
          td
            for genre in book.genres
              p= genre.genre
      //- li
      //-   img.list-img(src=book.imgurl)
      //-   a(href="/books/"+book.id)=book.title
      //-   p= author.name

  if page > 1 
    a(href="/?page="+(page -1)) Previous Page
  if books.length >= 10
    a(href="/?page="+(page +1)) Next Page
